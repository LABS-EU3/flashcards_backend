{
  "name": "flashcards_backend",
  "version": "0.0.1",
  "description": "Back end for the quick decks app.",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=testing jest --coverage --detectOpenHandles --runInBand ",
    "test-watcher": "cross-env NODE_ENV=testing jest --watchAll --coverage --forceExit",
    "updateDevDB": "npx knex migrate:latest --env development && npx knex seed:run --env development",
    "updateTestDB": "npx knex migrate:latest --env testing && npx knex seed:run --env testing",
    "start": "node index.js",
    "server": "nodemon index.js ",
    "lint": "eslint . --ext .js",
    "lint-fix": "eslint . --ext .js --fix"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix && npm run lint ",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LABS-EU3/flashcards_backend.git"
  },
  "keywords": [
    "express",
    "node",
    "postgres",
    "REST"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LABS-EU3/flashcards_backend/issues"
  },
  "homepage": "https://github.com/LABS-EU3/flashcards_backend#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "bcrypt": "^3.0.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.4",
    "mailgen": "^2.0.10",
    "nodemailer": "^6.4.2",
    "nodemailer-stub": "^1.2.1",
    "pg": "^7.14.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
